#page-footer
    position fixed
    bottom 0
    width 96rem
    background #333
    transition bottom .5s ease-out .5s

    &.hidden
        bottom -2em

    &.hidden:hover
        bottom 0

    nav
        display block
        height 2em
        line-height 2em
        padding 0 .5em

        &::before
            content "log.koehr.in"
            margin-left .5em
            font-weight bold
            font-size 6rem
            text-shadow .1rem .1rem .2rem #333, .2rem .2rem 0 #888;

        menu
            float right
            width 50%
            margin 0
            padding 0
            text-align right
            li
                display inline
                margin 0 .5em

                &.go-to-top
                    display inline-block
                    float left
                    width 1em
                    margin-left -1em
