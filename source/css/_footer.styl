#page-footer
    position fixed
    bottom 0
    width 96rem
    background #333
    transition bottom .5s ease-out .5s

    &.hidden
        bottom -2em

    nav
        display block
        height 2em
        line-height 2em
        padding 0 .5em

        &::before
            content "log.koehr.in"
            margin-left .5em
            font-weight bold
            font-size 6rem
            text-shadow .1rem .1rem .2rem #333, .2rem .2rem 0 #888;

        menu
            float right
            margin 0
            padding 0
            li
                display inline
                margin 0 .5em
