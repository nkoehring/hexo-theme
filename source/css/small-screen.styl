body
    width 100%
    margin 0 0


#page-header
    background none


#content menu.tags-list::before
    display block

#content header
    padding-left 1rem
    
    h2
        margin 0 0
        margin-top 1em
    p
        margin 0 0

#content .article-list article
    padding-left 1em

    time
        display block
        width auto
        text-align left

#content article.post
    padding 2rem .5em
    border none

    .meta
        width auto
        float none
        font-size 1em
        margin-bottom 1em

    .content-column
        width auto


#page-footer
    width 100%

    nav::before
        display none

    nav menu
        float none
        width auto

        li.go-to-top
            display inline
            width auto
            margin 0
