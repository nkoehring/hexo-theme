meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

if config.author
  meta(name='author', content=config.author)

if config.description
  block page_description
    meta(name='description', content=config.description)

title
  block window_title
    = config.title
//- link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)

link(href=url_for('img/favicon.png'), rel='icon')

link(rel='alternate', href=theme.rss ? theme.rss : url_for('atom.xml'), title=config.title, type='application/atom.xml')

link(rel='stylesheet', href=url_for('css/app.css') media="screen")
link(rel='stylesheet', href=url_for('css/small-screen.css'), media="screen and (max-width:959px)")

script(src=url_for('js/app.js'))
