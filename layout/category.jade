extends base

prepend window_title
  = page.category + ' // ' + __("categories") + ' // '

block content
  header.category
    h2.title= __("category.header", page.category)
    p.subtitle= _p("category.amount", page.posts.length)

  ul.article-list
    - page.posts.each(function(article){

      li
        a(href=url_for(article.path))
          article
            time.meta( datetime=article.date.format() )
              include _partial/article_meta
              +date(article.date)
              //+category(article.categories)
            h2= article.title

    - })
